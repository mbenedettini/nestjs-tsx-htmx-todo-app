    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.25.0",
    "jest": "^29.7.0",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
